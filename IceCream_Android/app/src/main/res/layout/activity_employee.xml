<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b5d1cc"
    tools:context=".EmployeeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="end|center_vertical"
            android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:textSize="20sp"
                android:fontFamily="@font/comfortaa_medium"
                android:textStyle="bold"
                android:paddingHorizontal="25dp"
                android:text="Продажі"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:textSize="20sp"
                android:fontFamily="@font/comfortaa_medium"
                android:textStyle="bold"
                android:paddingHorizontal="25dp"
                android:text="Повторити"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:textSize="20sp"
                android:paddingHorizontal="25dp"
                android:fontFamily="@font/comfortaa_medium"
                android:textStyle="bold"
                android:text="Вийти"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:paddingVertical="15dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal"
                android:layout_weight="0.8"
                android:orientation="vertical"
                app:cardElevation="5dp"
                app:cardCornerRadius="20dp"
                app:strokeWidth="5dp"
                app:strokeColor="#f7e7d8">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Ріжки"
                        android:textSize="30dp"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Введіть ріжок..."/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewHorn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:paddingVertical="15dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="20dp"
                app:strokeWidth="5dp"
                app:strokeColor="#f7e7d8"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Смаки"
                        android:textSize="30dp"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Введіть смак..."/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewIceCream"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:paddingVertical="15dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="20dp"
                app:strokeWidth="5dp"
                app:strokeColor="#f7e7d8"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily=""
                        android:gravity="center_horizontal"
                        android:text="Топінг"
                        android:textSize="30dp" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Введіть смак..."/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewTopping"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingVertical="15dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1">
                <Button
                    android:id="@+id/addIceCreamCheck"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:textSize="22dp"
                    android:fontFamily="@font/comfortaa_medium"
                    android:textStyle="bold"
                    android:text="Додати"/>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="20dp"
                    android:gravity="center_horizontal"
                    android:layout_weight="1.4"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="5dp"
                    app:strokeColor="#f7e7d8"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Чек"
                            android:textSize="30dp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/check"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="10"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="20dp">

                        </androidx.recyclerview.widget.RecyclerView>

                        <TextView
                            android:id="@+id/sumCheck"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingHorizontal="20dp"
                            android:textSize="25dp"
                            android:text="Сума чека: 0.0₴"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <Button
                    android:id="@+id/PayButton"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:textSize="22dp"
                    android:fontFamily="@font/comfortaa_medium"
                    android:textStyle="bold"
                    android:text="Pay"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>